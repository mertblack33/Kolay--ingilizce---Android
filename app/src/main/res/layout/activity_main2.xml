<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="@drawable/isim"
    >

    <EditText
        android:id="@+id/isim"
        android:layout_width="275dp"
        android:layout_height="59dp"
        android:layout_marginTop="416dp"
        android:background="@drawable/edit_back"
        android:drawableLeft="@drawable/baseline_person_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:fontFamily="@font/aclonica"
        android:hint="Kullanıcı Adı Giriniz."
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="61dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/button1"
        android:fontFamily="@font/aclonica"
        android:onClick="devam"
        android:text="Devam Et"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/isim"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/isim"
        app:layout_constraintTop_toBottomOf="@+id/isim" />
</androidx.constraintlayout.widget.ConstraintLayout>