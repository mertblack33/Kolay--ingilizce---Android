<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ilkokul.ilkokulsec"
    android:background="@drawable/isim"
    >

    <Button
        android:id="@+id/button3"
        android:layout_width="228dp"
        android:layout_height="69dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button1"
        android:fontFamily="@font/aclonica"
        android:onClick="genel"
        android:text="4. SINIF"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/button25"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button25"
        app:layout_constraintTop_toBottomOf="@+id/button25" />

    <Button
        android:id="@+id/button25"
        android:layout_width="228dp"
        android:layout_height="69dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button1"
        android:fontFamily="@font/aclonica"
        android:onClick="genel"
        android:text="3 SINIF"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="228dp"
        android:layout_height="69dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/button1"
        android:fontFamily="@font/aclonica"
        android:onClick="okul"
        android:text="2. SINIF"
        android:textColor="#FFFDFD"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="305dp"
        android:layout_height="68dp"
        android:layout_marginTop="273dp"
        android:fontFamily="@font/aclonica"
        android:text="LÜTFEN SINIF SEÇİNİZ"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>